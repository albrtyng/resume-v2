---
import Header from '../components/Header.astro';

interface Props {
    title?: string;
    description?: string;
}

const {
    title = 'Albert Yang â€” Full-Stack Software Engineer',
    description = 'Portfolio of Albert Yang. 5+ years building products used by millions.',
} = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="description" content={description} />
        <title>{title}</title>
        <script is:inline>
            history.scrollRestoration = 'manual';
        </script>

        <!-- Preload critical fonts -->
        <link
            rel="preload"
            href="/fonts/MangoGrotesque-Bold.woff2"
            as="font"
            type="font/woff2"
            crossorigin
        />
        <link
            rel="preload"
            href="/fonts/RacingSansOne-Regular.woff2"
            as="font"
            type="font/woff2"
            crossorigin
        />
        <!-- Preload 3D models -->
        <link rel="preload" href="/models/ship.glb" as="fetch" crossorigin />
        <link rel="preload" href="/models/tech-stack.glb" as="fetch" crossorigin />

        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    </head>
    <body>
        <Header />
        <slot />
        <script>
            import '../scripts/animations';
        </script>
    </body>
</html>
