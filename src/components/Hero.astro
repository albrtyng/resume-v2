<section
    id="hero"
    class="relative flex min-h-svh flex-col justify-center overflow-hidden"
    style="background-color: #4a5fc1; margin: 0 calc(-1 * clamp(1rem, 5vw, 6rem));"
>
    <!-- Decorative vertical grid lines -->
    <div
        id="hero-grid"
        class="gsap-animated pointer-events-none absolute inset-0 z-0"
        style="opacity: 0;"
        aria-hidden="true"
    ></div>

    <!-- Shutter reveal overlay — bars slide up to reveal hero -->
    <div id="hero-shutter" class="pointer-events-none absolute inset-0 z-50 flex" aria-hidden="true">
        <div class="hero-shutter-bar flex-1" style="background: var(--color-bg);"></div>
        <div class="hero-shutter-bar flex-1" style="background: var(--color-bg);"></div>
        <div class="hero-shutter-bar flex-1" style="background: var(--color-bg);"></div>
        <div class="hero-shutter-bar flex-1" style="background: var(--color-bg);"></div>
        <div class="hero-shutter-bar flex-1" style="background: var(--color-bg);"></div>
        <div class="hero-shutter-bar flex-1" style="background: var(--color-bg);"></div>
        <div class="hero-shutter-bar flex-1" style="background: var(--color-bg);"></div>
        <div class="hero-shutter-bar flex-1" style="background: var(--color-bg);"></div>
    </div>

    <!-- Top bar: label + descriptor (absolute so it doesn't affect centering) -->
    <div
        id="hero-top-bar"
        class="absolute inset-x-0 top-0 z-10 flex flex-col gap-4 px-[clamp(1.5rem,4vw,4rem)] pt-[clamp(1.5rem,3vh,3rem)] sm:flex-row sm:items-start sm:justify-between"
    >
        <p
            id="hero-label"
            class="gsap-animated text-xs uppercase tracking-[0.2em] sm:text-sm"
            style="color: #fff; opacity: 0; padding: 0.25rem 0.5rem;"
        >
            Resume of / Albert Yang
        </p>
        <div
            id="hero-descriptor"
            class="gsap-animated text-left sm:text-right"
            style="color: #fff; opacity: 0; padding: 0.25rem 0.5rem;"
        >
            <p class="text-xs uppercase tracking-[0.15em] sm:text-sm">Full-Stack Software Engineer</p>
            <p class="mt-1 text-xs sm:text-sm" style="color: #fff;">
                5+ years building products used by millions
            </p>
        </div>
    </div>

    <!-- Headline wrapper — contains all text layers as a single centered block -->
    <div class="relative w-full">
        <!-- Headline area: SHIP + faster on line 1, spacer for WITH ALBERT on line 2 -->
        <div
            id="hero-headline-area"
            class="relative z-10"
        >
            <!-- Line 1: SHIP + faster (adjacent, left-aligned) -->
            <h1 class="flex items-baseline gap-[clamp(0.75rem,2vw,2rem)]" style="padding-left: calc(100% / 8);">
                <div style="overflow: hidden; padding-top: 0.3em;">
                    <span
                        id="hero-ship"
                        class="gsap-animated block font-bold uppercase"
                        style="font-size: clamp(5rem, 14vw, 15rem); line-height: 0.85; color: var(--color-hero); opacity: 0;"
                    >
                        SHIP
                    </span>
                </div>
                <span
                    id="hero-faster"
                    class="gsap-animated font-bold"
                    style="font-family: 'Racing Sans One', system-ui, sans-serif; font-size: clamp(3rem, 8vw, 9rem); line-height: 0.85; color: var(--color-hero); clip-path: inset(0 100% 0 0); transform: skewX(-8deg); padding-right: 0.3em;"
                >
                    faster
                </span>
            </h1>

            <!-- Line 2: invisible spacer matching WITH ALBERT height -->
            <div
                aria-hidden="true"
                class="font-bold uppercase"
                style="font-family: var(--font-display); font-size: clamp(4rem, 17.5vw, 20rem); line-height: 0.85; visibility: hidden; white-space: nowrap; padding-left: calc(100% / 4);"
            >
                WITH ALBERT
            </div>
        </div>

        <!-- WITH ALBERT text layer (absolute, bottom-aligned within wrapper) -->
        <div
            id="hero-with-albert-layer"
            class="pointer-events-none absolute inset-x-0 bottom-0 z-[25]"
        >
            <div style="overflow: hidden;">
                <div
                    id="hero-with-albert"
                    class="gsap-animated font-bold uppercase"
                    style="font-family: var(--font-display); font-size: clamp(4rem, 17.5vw, 20rem); line-height: 0.85; color: #9EF5FB; opacity: 0; white-space: nowrap; padding-left: calc(100% / 4);"
                >
                    WITH ALBERT
                </div>
            </div>
        </div>

        <!-- WITH ALBERT solid overlay (wipes L→R to reveal text) -->
        <div
            id="hero-with-albert-overlay-layer"
            class="pointer-events-none absolute inset-x-0 bottom-0 z-[26] flex flex-col justify-end"
        >
            <div style="overflow: hidden;">
                <div
                    id="hero-with-albert-overlay"
                    class=""
                    style="background: #9EF5FB; padding-top: 0.15em; padding-bottom: 0.15em;"
                >
                    <div
                        class="font-bold uppercase"
                        style="font-family: var(--font-display); font-size: clamp(4rem, 17.5vw, 20rem); line-height: 0.85; visibility: hidden; white-space: nowrap; padding-left: calc(100% / 4);"
                    >
                        WITH ALBERT
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
