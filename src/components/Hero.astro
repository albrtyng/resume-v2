<section
    id="hero"
    class="relative flex min-h-svh items-center justify-center overflow-hidden"
    style="background-color: #4a5fc1; margin: 0 calc(-1 * clamp(1rem, 5vw, 6rem));"
>
    <!-- Layer 1: Split headline text (behind image) -->
    <div
        id="hero-text-layer"
        class="absolute z-10 flex flex-col justify-between px-[clamp(1.5rem,4vw,4rem)] py-[10vh]"
        style="inset: clamp(0.5rem, 1.5vw, 1.5rem);"
    >
        <h1 class="flex w-full items-baseline justify-between">
            <div style="overflow: hidden;">
                <span
                    id="hero-ship"
                    class="gsap-animated font-bold uppercase"
                    style="font-size: clamp(4.5rem, 13.5vw, 13.5rem); line-height: 0.85; color: var(--color-hero); display: block; opacity: 0;"
                >
                    SHIP
                </span>
            </div>
            <span
                id="hero-faster"
                class="gsap-animated font-bold uppercase"
                style="font-size: clamp(4.5rem, 13.5vw, 13.5rem); line-height: 0.85; color: var(--color-hero); clip-path: inset(0 100% 0 0); transform: skewX(-8deg);"
            >
                FASTER
            </span>
        </h1>

    </div>

    <!-- Layer 1b: WITH ALBERT text (in front of image, respects padding) -->
    <div
        class="absolute z-[25] flex flex-col justify-end px-[clamp(1.5rem,4vw,4rem)] py-[10vh] pointer-events-none"
        style="inset: clamp(0.5rem, 1.5vw, 1.5rem);"
    >
        <div style="overflow: hidden;">
        <div id="hero-with-albert" class="gsap-animated flex w-full items-baseline justify-between"
            style="opacity: 0;">
            <span
                class="font-bold uppercase"
                style="font-size: clamp(4.5rem, 13.5vw, 13.5rem); line-height: 0.85; color: #9EF5FB;"
            >
                WITH
            </span>
            <span
                class="font-bold uppercase"
                style="font-size: clamp(4.5rem, 13.5vw, 13.5rem); line-height: 0.85; color: #9EF5FB;"
            >
                ALBERT
            </span>
        </div>
        </div>
    </div>

    <!-- Layer 1c: WITH ALBERT solid overlay (full bleed, in front of text) -->
    <div
        class="absolute inset-0 z-[26] flex flex-col justify-end pointer-events-none"
    >
        <div style="overflow: hidden;">
            <div id="hero-with-albert-overlay" style="background: #9EF5FB; padding: 2.5em 0;">
                <div style="font-size: clamp(4.5rem, 13.5vw, 13.5rem); line-height: 0.85; visibility: hidden;">&#8203;</div>
            </div>
        </div>
    </div>

    <!-- Layer 2: Portrait photo placeholder (in front of text) -->
    <div
        id="hero-photo-layer"
        class="absolute z-20 flex items-end justify-center"
        style="inset: clamp(0.5rem, 1.5vw, 1.5rem);"
    >
        <div
            id="hero-photo"
            class="gsap-animated w-[65vw] sm:w-[45vw] md:w-[40vw] max-w-[500px]"
            style="background-color: #394f8a; aspect-ratio: 3/4; opacity: 0;"
        >
        </div>
    </div>

    <!-- Layer 3: Subtitle + tagline overlay (in front of image) -->
    <div
        id="hero-overlay-layer"
        class="absolute z-30 flex flex-col items-center px-6 pb-12 md:pb-16"
        style="inset: clamp(0.5rem, 1.5vw, 1.5rem); top: auto;"
    >
        <p
            id="hero-subtitle"
            class="gsap-animated text-center uppercase"
            style="font-size: clamp(1rem, 2.5vw, 1.75rem); color: var(--color-muted); letter-spacing: 0.15em; opacity: 0;"
        >
            <span class="hero-word">Full-Stack</span>
            <span class="hero-word">Software</span>
            <span class="hero-word">Engineer</span>
        </p>

        <p
            id="hero-tagline"
            class="gsap-animated mt-3 text-center md:mt-4"
            style="font-size: clamp(1.125rem, 2.5vw, 1.75rem); color: var(--color-accent-light); opacity: 0;"
        >
            5+ years building products used by millions
        </p>
    </div>
</section>
