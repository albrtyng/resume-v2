<section
    id="hero"
    class="relative flex min-h-svh flex-col items-start justify-center overflow-hidden px-6"
    style="background-color: #4a5fc1; margin: 0 calc(-1 * clamp(1rem, 5vw, 6rem)); padding-left: clamp(1rem, 5vw, 6rem); padding-right: clamp(1rem, 5vw, 6rem);"
>
<div class="mx-auto w-full max-w-5xl">
        <!-- Name -->
        <h1
            id="hero-name"
            class="gsap-animated text-left font-bold leading-none"
            style="font-size: clamp(3rem, 8vw, 8rem); color: var(--color-hero);"
        >
            Ship faster with Albert
        </h1>

        <!-- Subtitle -->
        <p
            id="hero-subtitle"
            class="gsap-animated mt-4 text-left md:mt-6"
            style="font-size: clamp(1rem, 2.5vw, 1.75rem); color: var(--color-muted); opacity: 0;"
        >
            <span class="hero-word">Full-Stack</span>
            <span class="hero-word">Software</span>
            <span class="hero-word">Engineer</span>
        </p>

        <!-- Tagline -->
        <p
            id="hero-tagline"
            class="gsap-animated mt-6 max-w-xl text-left md:mt-8"
            style="font-size: clamp(1.125rem, 2.5vw, 1.75rem); color: var(--color-accent-light); opacity: 0;"
        >
            5+ years building products used by millions
        </p>
    </div>
</section>
