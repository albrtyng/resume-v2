---
import Link from './Link.astro';
---

<footer
    id="footer"
    class="gsap-animated flex flex-col items-start justify-center gap-10 px-6"
    style="opacity: 0; background-color: var(--color-muted); min-height: 45vh; margin: 6rem calc(-1 * clamp(1rem, 5vw, 6rem)) 0; padding-left: clamp(1rem, 5vw, 6rem); padding-right: clamp(1rem, 5vw, 6rem);"
>
    <div class="mx-auto w-full max-w-5xl flex flex-col gap-24 md:flex-row md:items-center md:justify-between">
        <div
            id="footer-tagline"
            style="font-family: var(--font-heading); font-size: clamp(3rem, 8vw, 8rem); line-height: 1; letter-spacing: -0.02em;"
        >
            <div style="display: flex; justify-content: flex-start; gap: 1.5rem;">
                <span class="footer-word gsap-animated text-white" style="opacity: 0; transform: translateX(-100%);">Let's</span>
                <span class="footer-word footer-word-snap gsap-animated text-white" style="opacity: 0; transform: translateX(100%) translateY(-50px);">make</span>
            </div>
            <div style="display: flex; justify-content: flex-end; gap: 1.5rem;">
                <span class="footer-word footer-word-snap gsap-animated text-white" style="opacity: 0; transform: translateX(-100%) translateY(50px);">something</span>
                <span class="footer-word gsap-animated text-white" style="opacity: 0; transform: translateX(100%);">cool!</span>
            </div>
        </div>
        <div
            id="footer-links"
            class="gsap-animated flex flex-col items-center gap-0"
            style="opacity: 0; transform: translateY(20px); font-family: var(--font-heading); font-size: clamp(1.5rem, 4vw, 3rem); letter-spacing: -0.02em; color: var(--color-bg);"
        >
            <Link text="EMAIL" href="mailto:albertesyang@gmail.com" />
            <Link text="LINKEDIN" href="https://linkedin.com/in/albrtyng" />
        </div>
    </div>
</footer>
