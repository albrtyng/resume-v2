---
import Link from './Link.astro';
---

<footer
    id="footer"
    class="gsap-animated"
    style="opacity: 0; background-color: var(--color-muted); margin: 6rem calc(-1 * clamp(1rem, 5vw, 6rem)) 0; overflow: clip; position: relative;"
>
    <div
        style="padding: clamp(2rem, 5vw, 4rem) clamp(1rem, 5vw, 6rem); padding-left: calc(100% / 8);"
    >
        <div
            id="footer-tagline"
            style="font-family: var(--font-display); font-size: clamp(4.5rem, 13vw, 14rem); line-height: 1; letter-spacing: 0.03em; text-transform: uppercase; max-width: max-content;"
        >
            <div style="display: flex; justify-content: flex-start; gap: 1.5rem;">
                <span class="footer-word gsap-animated text-white" style="opacity: 0; transform: translateX(-100%);">Let's</span>
                <span class="footer-word footer-word-snap gsap-animated text-white" style="opacity: 0; transform: translateX(100%) translateY(-50px);">make</span>
            </div>
            <div style="display: flex; justify-content: flex-end; gap: 1.5rem;">
                <span class="footer-word footer-word-snap gsap-animated text-white" style="opacity: 0; transform: translateX(-100%) translateY(50px);">something</span>
                <span class="footer-word gsap-animated text-white" style="opacity: 0; transform: translateX(100%);">cool!</span>
            </div>
        </div>
        <div
            id="footer-links"
            class="gsap-animated"
            style="opacity: 0; transform: translateY(20px); font-family: var(--font-body); font-size: clamp(1.5rem, 4vw, 3rem); letter-spacing: -0.02em; color: white; margin-top: 1rem; display: flex; flex-direction: row; align-items: flex-start; gap: 1.5rem;"
        >
            <Link text="EMAIL ↗" href="mailto:albertesyang@gmail.com" />
            <Link text="LINKEDIN ↗" href="https://linkedin.com/in/albrtyng" />
        </div>
    </div>

    <canvas
        id="contact-book-canvas"
        style="position: absolute; top: 0; right: 0; width: 50%; height: 100%; pointer-events: none;"
    ></canvas>

    <div
        class="footer-ticker gsap-animated"
        style="opacity: 0; transform: translateY(100%); white-space: nowrap; line-height: 1; pointer-events: none; position: absolute; bottom: clamp(-7rem, -6vw, -2.5rem); left: 0; width: 100%;"
    >
        <div
            class="footer-ticker-track"
            style="display: inline-block; font-family: var(--font-display); font-size: clamp(6rem, 18vw, 20rem); color: rgba(255,255,255,0.15); text-transform: uppercase; letter-spacing: -0.02em;"
        >
            <span>GET IN TOUCH&nbsp;&nbsp;</span>
            <span>GET IN TOUCH&nbsp;&nbsp;</span>
            <span>GET IN TOUCH&nbsp;&nbsp;</span>
            <span>GET IN TOUCH&nbsp;&nbsp;</span>
            <span>GET IN TOUCH&nbsp;&nbsp;</span>
            <span>GET IN TOUCH&nbsp;&nbsp;</span>
        </div>
    </div>

    <script>
        import '../scripts/contact-book-scene';
    </script>
</footer>
