<footer
    id="footer"
    class="gsap-animated flex flex-col items-start justify-center gap-10 px-6"
    style="opacity: 0; background-color: var(--color-muted); min-height: 45vh; margin: 6rem calc(-1 * clamp(1rem, 5vw, 6rem)) 0; padding-left: clamp(1rem, 5vw, 6rem); padding-right: clamp(1rem, 5vw, 6rem);"
>
    <div class="mx-auto w-full max-w-5xl flex flex-col items-start gap-10">
        <div
            id="footer-tagline"
            style="font-family: var(--font-heading); font-size: clamp(3rem, 8vw, 8rem); line-height: 1; letter-spacing: -0.02em; color: var(--color-bg);"
        >
            <div style="display: flex; justify-content: flex-start; gap: 1.5rem;">
                <span class="footer-word gsap-animated" style="opacity: 0; transform: translateX(-100%);">Let's</span>
                <span class="footer-word footer-word-snap gsap-animated" style="opacity: 0; transform: translateX(100%) translateY(-50px);">make</span>
            </div>
            <div style="display: flex; justify-content: flex-end; gap: 1.5rem;">
                <span class="footer-word footer-word-snap gsap-animated" style="opacity: 0; transform: translateX(-100%) translateY(50px);">something</span>
                <span class="footer-word gsap-animated" style="opacity: 0; transform: translateX(100%);">cool!</span>
            </div>
        </div>
        <a
            href="https://linkedin.com/in/albrtyng"
            target="_blank"
            rel="noopener noreferrer"
            class="gsap-animated"
            style="opacity: 0; margin-left: -40px; transform: translateY(20px);"
        >
            <div id="lottie-linkedin" style="width: 300px;"></div>
        </a>
        <script>
            import lottie from 'lottie-web';

            (window as any).__lottieLinkedin = lottie.loadAnimation({
                container: document.getElementById('lottie-linkedin')!,
                renderer: 'svg',
                loop: false,
                autoplay: false,
                path: '/linkedin.json',
                rendererSettings: {
                    viewBoxOnly: true,
                    viewBoxSize: '0 160 640 180',
                },
            });
        </script>
    </div>
</footer>
